<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:Template name="CharacterSummary" src="project://database/Assets/Main/UI/Parts/CharacterSummary.uxml" />
    <Style src="project://database/Assets/Main/UI/MainUI.uss" />
    
    <!-- StrategyPhase Panel: 戦略行動フェーズのメインパネル -->
    <ui:VisualElement class="panel">
        
        <!-- ヘッダー: 日付・フェーズ情報 -->
        <ui:VisualElement class="header-panel" style="flex-direction: row; justify-content: space-between;">
            <ui:VisualElement style="flex-direction: row; align-items: flex-end; padding: 4px 0;">
                <ui:Label text="戦略" style="font-size: 40px; font-weight: bold;" />
                <ui:Label text="フェイズ" style="font-size: 30px; font-weight: bold;" />
            </ui:VisualElement>
            <ui:Button text="×" style="font-size: 20px; width: 40px; height: 40px; -unity-font-style: bold;" />
        </ui:VisualElement>

        <!-- プレイヤー情報パネル -->
        <ui:Instance name="CharacterSummary" template="CharacterSummary" />

        <!-- アクションボタンエリア -->
        <ui:VisualElement name="ActionsPanel" class="actions-panel" style="margin-top: 10px; padding: 10px; background-color: #223344;">
            <ui:VisualElement style="flex-direction: row; align-items: flex-end;">
                <ui:Label text="アクション" style="font-size: 40px; font-weight: bold;" />
            </ui:VisualElement>
            <ui:VisualElement style="flex-direction: row; align-items: flex-end; margin-top: 15px; margin-left: 5px;">
                <ui:Label text="消費金:" style="margin: 0 10px 0 0px; font-size: 30px; " />
                <ui:Label name="labelCostGold" text="100" style="font-size: 30px; color: yellow;" />
            </ui:VisualElement>
            <ui:VisualElement style="flex-direction: row; align-items: center; min-height: 32px; margin: 15px 0 15px 5px;">
                <ui:Label name="labelActionDescription" text="アクションの説明がここに表示されます。" style="font-size: 30px; white-space: normal" />
            </ui:VisualElement>
            <ui:VisualElement name="ActionButtons" style="flex-wrap: wrap; flex-direction: row;">
                <!-- ボタンはC#で動的生成 -->
            </ui:VisualElement>
        </ui:VisualElement>

                <!-- 城情報パネル -->
        <ui:VisualElement name="CastleInfoPanel" class="info-panel" style="margin-top: 10px; padding: 10px; background-color: #223344;">
            <ui:VisualElement style="flex-direction: row; align-items: flex-end; margin-bottom: 10px;">
                <ui:Label text="城情報" style="font-size: 30px; font-weight: bold;" />
            </ui:VisualElement>
            
            <!-- 城の基本情報 -->
            <ui:VisualElement style="flex-direction: row; margin-bottom: 10px;">
                <ui:VisualElement style="flex: 1;">
                    <ui:VisualElement style="flex-direction: row; align-items: center; margin-bottom: 5px;">
                        <ui:Label text="発展度:" style="margin-right: 10px; font-size: 24px;" />
                        <ui:Label name="labelDevLevel" text="0" style="font-size: 24px; color: cyan;" />
                        <ui:Label text="(総投資額:" style="margin-left: 10px; font-size: 20px;" />
                        <ui:Label name="labelTotalInvestment" text="0" style="font-size: 20px; color: yellow;" />
                        <ui:Label text=")" style="font-size: 20px;" />
                    </ui:VisualElement>
                    <ui:VisualElement style="flex-direction: row; align-items: center; margin-bottom: 5px;">
                        <ui:Label text="収入:" style="margin-right: 10px; font-size: 24px;" />
                        <ui:Label name="labelIncome" text="0" style="font-size: 24px; color: green; margin-right: 5px;" />
                        <ui:Label text="/" style="font-size: 24px; margin-right: 5px;" />
                        <ui:Label name="labelMaxIncome" text="0" style="font-size: 24px; color: lightgreen; margin-right: 10px;" />
                        <ui:VisualElement name="IncomeBar" style="width: 200px; height: 20px; background-color: gray; margin-right: 15px; border-width: 1px; border-color: white;">
                            <ui:VisualElement name="MaxIncomeBar" style="position: absolute; top: 0; left: 0; height: 100%; background-color: rgba(255, 255, 0, 0.3);" />
                            <ui:VisualElement name="CurrentIncomeBar" style="position: absolute; top: 0; left: 0; height: 100%; background-color: yellow;" />
                        </ui:VisualElement>
                        <ui:Label text="支出:" style="margin-right: 10px; font-size: 24px;" />
                        <ui:Label name="labelExpenditure" text="0" style="font-size: 24px; color: red;" />
                    </ui:VisualElement>
                    <ui:VisualElement style="flex-direction: row; align-items: center; margin-bottom: 5px;">
                        <ui:Label text="ゴールド:" style="margin-right: 10px; font-size: 24px;" />
                        <ui:Label name="labelGold" text="0" style="font-size: 24px; color: yellow;" />
                        <ui:Label text="(" style="margin-left: 5px; font-size: 20px;" />
                        <ui:Label name="labelBalance" text="+0" style="font-size: 20px; color: white;" />
                        <ui:Label text=")" style="font-size: 20px;" />
                    </ui:VisualElement>
                    <ui:VisualElement style="flex-direction: row; align-items: center; margin-bottom: 5px;">
                        <ui:Label text="城塞レベル:" style="margin-right: 10px; font-size: 24px;" />
                        <ui:Label name="labelCastleStrength" text="0" style="font-size: 24px; color: cyan;" />
                        <ui:Label text="総兵力:" style="margin-left: 15px; margin-right: 10px; font-size: 24px;" />
                        <ui:Label name="labelTotalPower" text="0" style="font-size: 24px; color: orange;" />
                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:VisualElement>

            <!-- キャラクターアイコン一覧 -->
            <ui:VisualElement style="margin-top: 10px;">
                <!-- 在城中キャラクター -->
                <ui:VisualElement style="margin-bottom: 15px;">
                    <ui:VisualElement style="flex-direction: row; align-items: center; margin-bottom: 5px;">
                        <ui:Label text="在城中" style="font-size: 24px; font-weight: bold;" />
                        <ui:Label name="labelGarrisonedCount" text="(0人)" style="margin-left: 10px; font-size: 20px; color: gray;" />
                    </ui:VisualElement>
                    <ui:VisualElement name="GarrisonedCharacterIcons" style="flex-direction: row; flex-wrap: wrap;">
                        <!-- 在城中キャラクターアイコンは動的に生成 -->
                    </ui:VisualElement>
                </ui:VisualElement>
                
                <!-- 出撃中キャラクター -->
                <ui:VisualElement>
                    <ui:VisualElement style="flex-direction: row; align-items: center; margin-bottom: 5px;">
                        <ui:Label text="出撃中" style="font-size: 24px; font-weight: bold;" />
                        <ui:Label name="labelDeployedCount" text="(0人)" style="margin-left: 10px; font-size: 20px; color: gray;" />
                    </ui:VisualElement>
                    <ui:VisualElement name="DeployedCharacterIcons" style="flex-direction: row; flex-wrap: wrap;">
                        <!-- 出撃中キャラクターアイコンは動的に生成 -->
                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>

    </ui:VisualElement>
</ui:UXML>